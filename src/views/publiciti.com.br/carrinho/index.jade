                                th Total
                        | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                        tbody
                            for item, index in carrinho.items
                                tr
                                    // Index
                                    td #{index + 1}
                                    // Product image
                                    td
                                        a(href='/produtos/#{item.produto._id}')
                                            img.img-responsive(src='#{item.produto.imagem.url}', alt='')
                                    // Product  name
                                    td
                                        a(href='/produtos/#{item.produto._id}') #{item.produto.titulo}
                                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                                    // Quantity with refresh and remove button
                                    td
                                        .input-group.input-group-sm
                                            input.form-control(type='text', placeholder='#{item.quantidade}')
                                            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                                            span.input-group-btn
                                                button.btn.btn-info(type='button')
                                                    i.fa.fa-refresh
                                                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                                                button.btn.btn-danger(type='button')
                                                    i.fa.fa-times
                                    // Unit price
                                    td R$ #{item.produto.valor}
                                    // Total cost
                                    td R$ #{item.produto.valor * item.quantidade }
                                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                // Buttons
