doctype
html(lang='pt', ng-app='panel')
  head
    // start: Meta
    meta(charset='utf-8')
    title
      | #{site.nome} - Painel de Controle
    meta(name='description', content='Painel de Controle')
    meta(name='author', content='Thiago Paes')
    meta(name='keyword', content='rhcloud, controle, gerenciador,conteúdo')
    // end: Meta

    // start: Mobile Specific
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // end: Mobile Specific
    
    // start: CSS
    link(href='/rhcloud/css/bootstrap.min.css', rel='stylesheet')
    link(href='/rhcloud/css/style.min.css', rel='stylesheet')
    link(href='/rhcloud/css/retina.min.css', rel='stylesheet')
    // end: CSS

    // The HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      script(src='/rhcloud/js/respond.min.js')
      link(href='/rhcloud/css/ie.css', rel='stylesheet')
    //if IE 9
      link#ie9style(href='/rhcloud/css/ie9.css', rel='stylesheet')

    // start: Favicon and Touch Icons
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/rhcloud/ico/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/rhcloud/ico/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/rhcloud/ico/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='57x57', href='/rhcloud/ico/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='/rhcloud/ico/favicon.png')
    // end: Favicon and Touch Icons
  body
    // start: Header
    .navbar
      .navbar-inner
        .container
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-nav.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/painel')
            span
             | #{site.nome} - Painel de Controle
          // start: Header Menu
          .nav-no-collapse.header-nav
            ul.nav.pull-right
              li
                a.btn(href='/')
                  i.halflings.home.white
          // end: Header Menu
    // start: Header
    .container
      .row
        // start: Main Menu
        #sidebar-left.col-sm-1
          .nav-collapse.sidebar-nav.collapse.navbar-collapse.bs-navbar-collapse
            - var icons = {atuacao: 'bullhorn', clientes: 'briefcase', contato: 'envelope', curriculos: 'files-o', empregos: 'suitcase', equipe: 'users', produtos: 'book', orcamentos: 'money', parceiros: 'sitemap', servicos:'gears', sites: 'globe', slides: 'film', usuarios: 'group', empresa: 'globe', aviso: 'envelope' }

            ul.nav.nav-tabs.nav-stacked.main-menu
              li
                a(href='#/')
                  i.fa.fa-home
                  span.hidden-sm  Início

              each modulo, index in site.modulos
                li
                  a(href='#/' + modulo)
                    i.fa(class='fa-' + icons[modulo])
                    span.hidden-sm= modulo

              li
                a(href='/logout')
                  i.fa.fa-power-off
                  span.hidden-sm Sair

        a#main-menu-toggle.hidden-xs.open
          i.fa.fa-bars
        // end: Main Menu

        // start: Content
        #content.col-sm-11
          .row(ng-view)
          // /row
        // end: Content

        // start: Widgets Area
        #widgets-area.col-sm-2
          ul#myTab.nav.tab-menu.nav-tabs
            li.active
              a(href='#charts')
                i.fa.fa-bar-chart-o
            li
              a(href='#users')
                i.fa.fa-group
            li
              a(href='#messages')
                i.fa.fa-envelope
          #myTabContent.tab-content
            #charts.tab-pane.active
              .bar-stat
                span.title Account balance
                span.value $19 999,99
                span.chart.green 7,3,2,6,6,3,9,0,1,4
              hr
              .bar-stat
                span.title Clients
                span.value 1278
                span.chart.yellow 8,2,5,4,7,4,7,2,5,9
              hr
              .bar-stat
                span.title Orders
                span.value 5876
                span.chart.blue 2,4,6,8,3,5,9,3,2,2
              hr
              .bar-stat
                span.title Messages
                span.value 673
                span.chart.red 0,3,3,8,3,3,2,7,8,4
              hr
              #cpu-usage
              ul.progress-bars
                li
                  span.title Free Memory
                  span.percent
                  .taskProgress.progressSlim.progressGreen 80
                li
                  span.title Free HDD Drive
                  span.percent
                  .taskProgress.progressSlim.progressYellow 20
                li
                  span.title Free SSD Drive
                  span.percent
                  .taskProgress.progressSlim.progressBlue 57
                li
                  span.title Transfer
                  span.percent
                  .taskProgress.progressSlim.progressRed 45
            #users.tab-pane
              ul.users-list
                li
                  a(href='#/')
                    span.status.active
                    span.avatar
                      img.img-circle(src='/rhcloud/img/avatar.jpg', alt='Avatar')
                    span.name &Lstrok;ukasz Holeczek
                li
                  a(href='#/')
                    span.status.busy
                    span.avatar
                      img.img-circle(src='/rhcloud/img/avatar2.jpg', alt='Avatar')
                    span.name Megan Abott
                li
                  a(href='#/')
                    span.status.disable
                    span.avatar
                      img.img-circle(src='/rhcloud/img/avatar3.jpg', alt='Avatar')
                    span.name Kate Ross
                li
                  a(href='#/')
                    span.status.active
                    span.avatar
                      img.img-circle(src='/rhcloud/img/avatar4.jpg', alt='Avatar')
                    span.name Julie Blank
                li
                  a(href='#/')
                    span.status
                    span.avatar
                      img.img-circle(src='/rhcloud/img/avatar5.jpg', alt='Avatar')
                    span.name Jane Sanders
                li
                  a(href='#/') View all users
            #messages.tab-pane
              ul.messages-list
                li
                  a(href='#/')
                    .avatar
                      img.img-circle(src='/rhcloud/img/avatar.jpg', alt='Avatar')
                    span.name &Lstrok;ukasz Holeczek
                    span.date 25/6/2013
                    span.title Custom Bootstrap design for new client
                li
                  a(href='#/')
                    .avatar
                      img.img-circle(src='/rhcloud/img/avatar2.jpg', alt='Avatar')
                    span.name Megan Abott
                    span.date 25/6/2013
                    span.title Custom Bootstrap design for new client
                li
                  a(href='#/')
                    .avatar
                      img.img-circle(src='/rhcloud/img/avatar3.jpg', alt='Avatar')
                    span.name Kate Ross
                    span.date 25/6/2013
                    span.title Custom Bootstrap design for new client
                li
                  a(href='#/')
                    .avatar
                      img.img-circle(src='/rhcloud/img/avatar4.jpg', alt='Avatar')
                    span.name Julie Blank
                    span.date 25/6/2013
                    span.title Custom Bootstrap design for new client
                li
                  a(href='#/')
                    .avatar
                      img.img-circle(src='/rhcloud/img/avatar5.jpg', alt='Avatar')
                    span.name Jane Sanders
                    span.date 25/6/2013
                    span.title Custom Bootstrap design for new client
                li
                  a(href='#/') View all messages
        // end: Widgets Area
        a#widgets-area-button.hidden-sm.hidden-xs.open
          i.fa.fa-bars
      // /row
      #myModal.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
              h4.modal-title Modal title
            .modal-body
              p Here settings can be configured...
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes
          // /.modal-content
        // /.modal-dialog
      // /.modal
    // /container
    .clearfix
    footer
        .row
            .col-md-6.text-left
                p
                    span
                      | &copy; #{new Date().getFullYear()} - #{site.nome}
            .col-md-6.text-right
                p
                    span(style='text-align:right')
                        span
                            | Desenvolvido por &nbsp;
                            a(href="http://www.mrprompt.com.br", target="_blank") mrprompt.com.br

