doctype
html(lang='pt')
  head
    // start: Meta
    meta(charset='utf-8')
    title Painel de Controle
    meta(name='description', content='Painel de Controle')
    meta(name='author', content='Thiago Paes <mrprompt@gmail.com>')
    meta(name='keyword', content='Painel, controle, CMS, gerenciador, conte√∫do')
    // end: Meta
    // start: Mobile Specific
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // end: Mobile Specific
    // start: CSS
    link(href='/rhcloud/css/bootstrap.min.css', rel='stylesheet')
    link(href='/rhcloud/css/style.min.css', rel='stylesheet')
    link(href='/rhcloud/css/retina.min.css', rel='stylesheet')
    // end: CSS
    // The HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      script(src='/rhcloud/js/respond.min.js')
      link(href='/rhcloud/css/ie.css', rel='stylesheet')
    //if IE 9
      link#ie9style(href='/rhcloud/css/ie9.css', rel='stylesheet')
    // start: Favicon and Touch Icons
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/rhcloud/ico/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/rhcloud/ico/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/rhcloud/ico/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='57x57', href='/rhcloud/ico/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='/rhcloud/ico/favicon.png')
    // end: Favicon and Touch Icons
    style(type='text/css').
      body { background: url("/rhcloud/img/bg-login.jpg") !important; }
  body
    .container
      .row
        .row
          .login-box
            .icons
              a(href='/')
                i.halflings-icon.home
            h2 Acessar o painel

            form.form-horizontal(name='loginForm', method='post', action='/login')
              fieldset
                .input-wrap
                  .input-prepend.input-group(title='E-mail de acesso')
                    span.input-group-addon
                      i.fa.fa-user
                    input#username.form-control(name='username', type='email', placeholder='e-mail', required)

                .input-wrap
                  .input-prepend.input-group(title='Senha de acesso')
                    span.input-group-addon
                      i.fa.fa-lock
                    input#password.form-control(name='password', type='password', placeholder='senha', required)
                .button-login
                  button.btn.btn-primary(type='submit') Entrar
                .clearfix
            hr
          // /col
        // /row
      // /row
    // /container