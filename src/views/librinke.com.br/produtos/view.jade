extends ../layout

block conteudo
  //
   Banner Start
  .banner.padd
    .container
      //
         Image
      img.img-responsive(src='/librinke/img/crown.png', alt='')
      //
         Heading
      h2.white Produtos
      ol.breadcrumb
        li
          a(href='/') Início
        li
          a(href='/produtos') Produtos
        li
          a(href='/produtos?tipo=#{produto.tipo}') #{produto.tipo}
        li.active 
          | #{produto.titulo}
      .clearfix
  //
     Banner End
  //
     Inner Content
  .inner-page.padd
    //
       Single Item Start
    .single-item
      .container
        //
           Shopping single item contents
        .single-item-content
          .row
            .col-md-4.col-sm-5
              //
                 Product image
              img.img-responsive.img-thumbnail(src="#{produto.imagem.url}", alt='')
            .col-md-8.col-sm-7
              //
                 Heading
              h3
                | #{produto.titulo}
              .row
                .col-md-7.col-sm-12
                  //
                     Single item details
                  .item-details
                    //
                       Paragraph
                    div.text-justify
                      | !{produto.descricao}
                    //
                       Heading
                    h5 Detalhes
                    //
                       Recipe ingredients
                    ul.list-unstyled
                      li
                        i.fa.fa-check
                        | Código
                        span.pull-right
                          | #{produto.codigo}
                        .clearfix
                      li
                        i.fa.fa-check
                        | Categoria
                        span.pull-right
                          | #{produto.categoria}
                        .clearfix
                .col-md-5.col-sm-12
                  //
                     Form inside table wrapper
                  .table-responsive
                    //
                       Ordering form
                    form(role='form')
                      //
                         Table
                      table.table.table-bordered
                        tr
                          td Valor Unitário
                          td R$ #{produto.valor}
                    //
                      / Table End
                  //
                    / Table responsive class end
              //
                / Inner row end
    //
       Single Item End
  //
     / Inner Page Content End