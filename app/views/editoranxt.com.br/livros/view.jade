extends ../layout

block conteudo
    div(ng-controller='Livros')
      //
       Banner Start
      .banner.padd
        .container
          //
             Image
          img.img-responsive(src='/librinke/img/crown.png', alt='')
          //
             Heading
          h2.white Livros
          ol.breadcrumb
            li
              a(href='/') Início
            li
              a(href='/livros') Livros
            li.active Título do Livro
          .clearfix
      //
         Banner End
      //
         Inner Content
      .inner-page.padd
        - var livro = JSON.parse(conteudo)
        - var img = JSON.parse(livro.imagem);

        //
           Single Item Start
        .single-item
          .container
            //
               Shopping single item contents
            .single-item-content
              .row
                .col-md-4.col-sm-5
                  //
                     Product image
                  img.img-responsive.img-thumbnail(src="#{img.url}", alt='')
                .col-md-8.col-sm-7
                  //
                     Heading
                  h3
                    | #{livro.titulo}
                  .row
                    .col-md-7.col-sm-12
                      //
                         Single item details
                      .item-details
                        //
                           Paragraph
                        div.text-justify
                          | !{livro.descricao}
                        //
                           Heading
                        h5 Detalhes
                        //
                           Recipe ingredients
                        ul.list-unstyled
                          li
                            i.fa.fa-check
                            | Código
                            span.pull-right
                              | #{livro.codigo}
                            .clearfix
                          li
                            i.fa.fa-check
                            | Categoria
                            span.pull-right
                              | #{livro.categoria}
                            .clearfix
                          li
                            i.fa.fa-check
                            | Editora
                            span.pull-right
                              | #{livro.editora}
                            .clearfix
                    .col-md-5.col-sm-12
                      //
                         Form inside table wrapper
                      .table-responsive
                        //
                           Ordering form
                        form(role='form')
                          //
                             Table
                          table.table.table-bordered
                            tr
                              td Valor Unitário
                              td R$ 0,00
                        //
                          / Table End
                      //
                        / Table responsive class end
                  //
                    / Inner row end
        //
           Single Item End
      //
         / Inner Page Content End