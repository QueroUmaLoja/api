.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-group
        span.break
        | Usuários
      .box-icon
        a.btn-plus(href='#/usuarios/adicionar')
          i.fa.fa-plus

    .box-content
        .block
          div(class='alert alert-{{ status.type }}', ng-show='status')
              button(type='button', class='close', data-dismiss='alert') &times;
              | {{ status.message}}

          div(class='alert alert-warning', ng-show='usuarios.length == 0')
              | Você não possui nenhum usuario cadastrado, cadastre um &nbsp;
              a(href='#/usuarios/adicionar') aqui

          table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='usuarios.length')
              thead
                  tr
                      td.col-md-10 E-mail
                      td.col-md-1

              tbody(ng-show='usuarios.length')
                  tr(ng-repeat='usuario in usuarios | pagination: curPage * pageSize | limitTo: pageSize')
                      td {{ usuario.email }}
                      td
                          a(href='#/usuarios/editar/{{ usuario._id }}', class='btn btn-mini btn-success')
                              span.fa.fa-edit &nbsp;
                          button(class='btn btn-mini btn-danger', ng-click='delete(usuario._id)')
                              span.fa.fa-trash-o &nbsp;

      .block.text-center(ng-show='usuarios.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= usuarios.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar