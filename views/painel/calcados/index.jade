.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-female
        span.break
        | Calçados Escolares
      .box-icon
        a.btn-plus(href='#/calcados/adicionar')
          i.fa.fa-plus

    .box-content
        .block
          div(class='alert alert-{{ status.type }}', ng-show='status')
              button(type='button', class='close', data-dismiss='alert') &times;
              | {{ status.message}}

          div(class='alert alert-warning', ng-show='calcados.length == 0')
              | Você não possui nenhum calcado cadastrado, cadastre um &nbsp;
              a(href='#/calcados/adicionar') aqui

          table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='calcados.length')
              thead
                  tr
                      th Título
                      th Descrição
                      th

              tbody(ng-show='calcados.length')
                  tr(ng-repeat='calcado in calcados | pagination: curPage * pageSize | limitTo: pageSize')
                      td {{ calcado.titulo }}
                      td {{ calcado.descricao }}
                      td
                          a(href='#/calcados/editar/{{ calcado._id }}', class='btn btn-mini btn-success')
                              span.fa.fa-edit &nbsp;
                          button(class='btn btn-mini btn-danger', ng-click='delete(calcado._id)')
                              span.fa.fa-trash-o &nbsp;

      .block.text-center(ng-show='calcados.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= calcados.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar