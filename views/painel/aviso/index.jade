.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-bullhorn
        span.break
        | Avisos da tela inicial
      .box-icon
        a.btn-plus(href='#/aviso/adicionar')
          i.fa.fa-plus

    .box-content
      div(class='alert alert-{{ status.type }}', ng-show='status')
          button(type='button', class='close', data-dismiss='alert') &times;
          | {{ status.message}}

      div(class='alert alert-warning', ng-show='avisos.length == 0')
          | Você não possui nenhum aviso, cadastre um &nbsp;
          a(href='#/aviso/adicionar') aqui

      table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='avisos.length')
        thead
          tr
            th Título
            th Data de Cadastro
            th Período
            th.col-md-1 Ações
        tbody
          tr(ng-repeat='aviso in avisos | pagination: curPage * pageSize | limitTo: pageSize')
            td {{ aviso.titulo }}
            td.center {{ aviso.cadastro | date: 'dd/MM/yyyy HH:mm' }}
            td.center {{ aviso.inicio | date: 'dd/MM/yyyy HH:mm' }} ~ {{ aviso.fim | date: 'dd/MM/yyyy HH:mm' }}
            td.center
              //
                a.btn.btn-success(href='#/aviso/{{ aviso._id }}')
                  i.fa.fa-search-plus
              a.btn.btn-info(href='#/aviso/editar/{{ aviso._id }}')
                i.fa.fa-edit
              a.btn.btn-danger(ng-click='delete(aviso._id)')
                i.fa.fa-trash-o

      .block.text-center(ng-show='avisos.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= avisos.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar
