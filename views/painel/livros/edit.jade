.col-lg-12
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-book
        span.break
        | Livros
      .box-icon
        a.btn-plus(href='#/livros/adicionar')
          i.fa.fa-plus

    .box-content
        .block
          div(class='alert alert-{{ status.type }}', ng-show='status')
            button(type='button', class='close', data-dismiss='alert') &times;
            | {{ status.message}}

          form(name='livroForm', ng-submit='edit()', ng-init='get()', class='form-vertical', novalidate)
            include _form.jade