.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-film
        span.break
        | Slides da tela inicial
      .box-icon
        a.btn-plus(href='#/slides/adicionar')
          i.fa.fa-plus

    .box-content
      .block
          div(class='alert alert-{{ status.type }}', ng-show='status')
              button(type='button', class='close', data-dismiss='alert') &times;
              | {{ status.message}}

          div(class='alert alert-warning', ng-show='slides.length == 0')
              | Você não possui nenhum slide cadastrado, cadastre um &nbsp;
              a(href='#/slides/adicionar') aqui

          table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='slides.length')
              thead
                  tr
                      td.col-md-3 Título
                      td.col-md-4 Descrição
                      td.col-md-3 Link
                      td.col-md-1

              tbody(ng-show='slides.length')
                  tr(ng-repeat='slide in slides | pagination: curPage * pageSize | limitTo: pageSize')
                      td {{ slide.titulo }}
                      td {{ slide.descricao }}
                      td {{ slide.endereco }}
                      td
                          a(href='#/slides/editar/{{ slide._id }}', class='btn btn-mini btn-success')
                              span.fa.fa-edit &nbsp;
                          button(class='btn btn-mini btn-danger', ng-click='delete(slide._id)')
                              span.fa.fa-trash-o &nbsp;

      .block.text-center(ng-show='slides.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= slides.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar

