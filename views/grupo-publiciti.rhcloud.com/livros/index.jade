.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-book
        span.break
        | Livros
      .box-icon
        a.btn-plus(href='#/livros/adicionar')
          i.fa.fa-plus

    .box-content
        div(class='alert alert-{{ status.type }}', ng-show='status')
            button(type='button', class='close', data-dismiss='alert') &times;
            | {{ status.message}}

        div(class='alert alert-warning', ng-show='livros.length == 0')
            | Você não possui nenhum livro cadastrado, cadastre um &nbsp;
            a(href='#/livros/adicionar') aqui

        table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='livros.length')
          thead
            tr
                td Título
                td Código
                td Categoria
                td editora
                td.col-md-1

          tbody(ng-show='livros.length')
            tr(ng-repeat='livro in livros | pagination: curPage * pageSize | limitTo: pageSize')
              td {{ livro.titulo }}
              td {{ livro.codigo }}
              td {{ livro.categoria }}
              td {{ livro.editora }}
              td
                a(href='#/livros/editar/{{ livro._id }}', class='btn btn-mini btn-success')
                  span.fa.fa-edit
                button(class='btn btn-mini btn-danger', ng-click='delete(livro._id)')
                  span.fa.fa-trash-o

          tfoot
            tr
              td(colspan='5', class='text-right')
                a(href='#/livros/adicionar', class='btn btn-primary btn-mini')
                  span.fa.fa-plus &nbsp;

      .block.text-center(ng-show='livros.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= autacoes.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar