.col-lg-12(ng-init='load()')
  .box
    .box-header(data-original-title='')
      h2
        i.fa.fa-sitemap
        span.break
        | Parceiros
      .box-icon
        a.btn-plus(href='#/parceiros/adicionar')
          i.fa.fa-plus

    .box-content
      .block
          div(class='alert alert-{{ status.type }}', ng-show='status')
              button(type='button', class='close', data-dismiss='alert') &times;
              | {{ status.message}}

          div(class='alert alert-warning', ng-show='parceiros.length == 0')
              | Você não possui nenhum parceiro cadastrado, cadastre um &nbsp;
              a(href='#/parceiros/adicionar') aqui

          table.table.table-striped.table-bordered.bootstrap-datatable.datatable(ng-show='parceiros.length')
              thead
                  tr
                      td.col-md-3 Nome
                      td.col-md-7 Atuação
                      td.col-md-1

              tbody(ng-show='parceiros.length')
                  tr(ng-repeat='parceiro in parceiros | pagination: curPage * pageSize | limitTo: pageSize')
                      td
                          a(href='{{parceiro.url}}', target='_blank')
                              | {{ parceiro.nome }}
                      td {{ parceiro.atuacao }}
                      td
                          a(href='#/parceiros/editar/{{ parceiro._id }}', class='btn btn-mini btn-success')
                              span.fa.fa-edit &nbsp;
                          button(class='btn btn-mini btn-danger', ng-click='delete(parceiro._id)')
                              span.fa.fa-trash-o &nbsp;

      .block.text-center(ng-show='parceiros.length')
        ul.pagination.pagination-centered.inline.unstyled
          li
            a.btn.btn-link(ng-disabled='curPage === 0', ng-click='curPage = curPage - 1')
              | Voltar
          li
            span
              | Página {{ curPage + 1 }} de {{ paginas() }}
          li
            a.btn.btn-link(ng-disabled='curPage >= parceiros.length / pageSize - 1', ng-click='curPage = curPage + 1')
              | Avançar

